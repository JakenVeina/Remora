<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;netcoreapp3.0</TargetFrameworks>
        <LangVersion>8</LangVersion>
    </PropertyGroup>

    <PropertyGroup>
        <Description>A behaviour-based activity package for any application.</Description>
        <Version>1.1.0</Version>
        <PackageReleaseNotes>
            Queue continuous actions on the thread pool, and allow logless continuous actions.
        </PackageReleaseNotes>
        <PackageTags>$(PackageTags);service;behaviour;async;await;tpl</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.2.0" />
    </ItemGroup>

</Project>
